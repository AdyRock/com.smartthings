{
    "id": "com.smartthings",
    "version": "2.0.0",
    "compatibility": ">=5.0.0",
    "sdk": 3,
    "brandColor": "#FF7D4B",
    "name": {
        "en": "SmartThings Hub"
    },
    "description": {
        "en": "Add devices from SmartThings to Homey"
    },
    "category": [
        "appliances"
    ],
    "permissions": [],
    "bugs": {
        "url": "https://github.com/AdyRock/com.smartthings/issues"
    },
    "source": "https://github.com/AdyRock/com.smartthings",
    "images": {
        "large": "/assets/images/large.png",
        "small": "/assets/images/small.png"
    },
    "author": {
        "name": "Adrian Rockall",
        "email": "ady@rockall.plus.com"
    },
    "api": {
        "getRoot": {
            "method": "get",
            "path": "/",
            "public": true
        },
        "getLog": {
            "method": "get",
            "path": "/getLog/"
        },
        "getDetect": {
            "method": "get",
            "path": "/getDetect/"
        },
        "getWebHook": {
            "method": "get",
            "path": "/webhook/",
            "public": true
        },
        "clearLog": {
            "method": "post",
            "path": "/clearLog/"
        },
        "sendCmd": {
            "method": "post",
            "path": "/sendCmd/"
        },
        "sendRoot": {
            "method": "post",
            "path": "/",
            "public": true
        },
        "sendWebHook": {
            "method": "post",
            "path": "/webhook/",
            "public": true
        },
        "putWebHook": {
            "method": "put",
            "path": "/webhook/",
            "public": true
        },
        "deleteWebHook": {
            "method": "delete",
            "path": "/webhook/",
            "public": true
        }
    }
}